<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header'); %>
</head>
<body>
  <%- include('../partials/navbar'); %>

  <div class="container mt-5">
    <h1 class="text-center">Gestión de Productos</h1>
    <form action="/admin/products" method="POST" class="mb-4">
      <div class="row">
        <div class="col-md-3">
          <input type="text" name="name" placeholder="Nombre" class="form-control" required>
        </div>
        <div class="col-md-3">
          <select name="categoryId" class="form-select" required>
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <input type="number" name="price" placeholder="Precio" class="form-control" required>
        </div>
        <div class="col-md-2">
          <input type="number" name="stock" placeholder="Stock" class="form-control" required>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Agregar Producto</button>
        </div>
      </div>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th>Precio</th>
          <th>Stock</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.Category.name %></td>
            <td>$<%= product.price.toFixed(2) %></td>
            <td><%= product.stock %></td>
            <td>
              <form action="/admin/products/<%= product.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer'); %>
</body>
</html>
