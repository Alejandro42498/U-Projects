<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header'); %>
</head>
<body>
  <%- include('../partials/navbar'); %>

  <div class="container mt-5">
    <h1 class="text-center">Gestión de Categorías</h1>
    <form action="/admin/categories" method="POST" class="mb-4">
      <div class="row">
        <div class="col-md-8">
          <input type="text" name="name" placeholder="Nombre de categoría" class="form-control" required>
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-primary w-100">Agregar Categoría</button>
        </div>
      </div>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <form action="/admin/categories/<%= category.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer'); %>
</body>
</html>
