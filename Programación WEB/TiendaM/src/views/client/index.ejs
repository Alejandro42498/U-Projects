<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header'); %>
</head>
<body>
  <%- include('../partials/navbar'); %>

  <div class="container mt-5">
    <h1 class="text-center">Bienvenido a la Tienda de Instrumentos</h1>
    <div class="row">
      <% categories.forEach(category => { %>
        <div class="col-md-12">
          <h2><%= category.name %></h2>
          <div class="row">
            <% category.Products.forEach(product => { %>
              <div class="col-md-4 mb-4">
                <div class="card h-100">
                  <img src="/images/placeholder.png" class="card-img-top" alt="<%= product.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.description %></p>
                    <p class="text-primary">$<%= product.price.toFixed(2) %></p>
                    <button class="btn btn-primary w-100">Agregar al carrito</button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('../partials/footer'); %>
</body>
</html>
